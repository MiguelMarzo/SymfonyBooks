{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1>Listado de libros técnicos de programación</h1>

            <table class="table books-table">
                <thead>
                <th>Portada</th>
                <th>Título</th>
                <th>Autor</th>
                <th>Precio</th>
                <th>Acciones</th>
                </thead>
                <tbody>
                    {% for book in books %}
                        <tr>
                            <td><img class="img-rounded" src="{{ book.coverUrl }}"></td>
                            <td>{{ book.title }}</td>
                            <td>{{ book.author }}</td>
                            <td>{{ book.price }}€</td>
                            <td></td>
                        </tr>
                    {% else %}
                        <tr td colspan="5">No se han encontrado libros</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}